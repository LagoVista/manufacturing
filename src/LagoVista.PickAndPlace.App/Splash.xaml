<Window x:Class="LagoVista.PickAndPlace.App.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LagoVista.PickAndPlace.App"
        mc:Ignorable="d"
        Title="PCB Commander - Login" Height="200" Width="500">
    <Grid>
        <StackPanel Width="300" VerticalAlignment="Center">
            <Label>User Name</Label>
            <TextBox x:Name="UserName"></TextBox>
            <Label>Password</Label>
             <TextBox x:Name="Password"></TextBox>
            <Button HorizontalAlignment="Right" Width="120" Height="32" Click="Button_Click" >Login</Button>
        </StackPanel>
    </Grid>
</Window>
