<ucb:VMBoundUserControl x:Class="LagoVista.PickAndPlace.App.Controls.Machine.StagingPlateSelectorControl"
             x:TypeArguments="vm:IStagingPlateSelectorViewModel"                        
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ucb="clr-namespace:LagoVista.XPlat;assembly=LagoVista.XPlat.WPF"
             xmlns:vm="clr-namespace:LagoVista.PickAndPlace.Interfaces.ViewModels.Machine;assembly=LagoVista.PickAndPlace"                          
             xmlns:local="clr-namespace:LagoVista.PickAndPlace.App.Controls.Machine"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Staging Plate"/>
        <ComboBox ItemsSource="{Binding MachineConfiguration.StagingPlates}" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding SelectedStagingPlateId}"></ComboBox>

        <StackPanel Visibility="{Binding SelectedStagingPlate, Converter={StaticResource NoTNullToVisibilityConverter}}">
            <TextBlock Text="Row"/>
            <ComboBox ItemsSource="{Binding StagingPlateRows}" SelectedValuePath="Id" SelectedValue="{Binding SelectedStagingPlateRowId}"></ComboBox>
            <TextBlock Text="Column"/>
            <ComboBox ItemsSource="{Binding StagingPlateCols}" SelectedValuePath="Id" SelectedValue="{Binding SelectedStagingPlateColId}"></ComboBox>
        </StackPanel>
    </StackPanel>
</ucb:VMBoundUserControl>
