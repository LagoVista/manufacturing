<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:ctl="clr-namespace:LagoVista.PickAndPlace.App.Controls"
                    xmlns:ucb="clr-namespace:LagoVista.XPlat;assembly=LagoVista.XPlat.WPF"
                    xmlns:ui="clr-namespace:LagoVista.PickAndPlace.App.Controls.UI"                    
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
                    
    <FontFamily x:Key="MachineFont">/Fonts/#DSEG14 Classic</FontFamily>

    <Style TargetType="{x:Type TabPanel}">
        <Setter Property="Background" Value="{StaticResource Primary}"/>
    </Style>

    <SolidColorBrush x:Key="TextBox.Static.Background" Color="Yellow"/>


    <Style TargetType="ui:MaskingTextBox">
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style TargetType="TextBlock" >
        <Setter Property="Margin" Value="2" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#c0c0c0" />
    </Style>

    <Style TargetType="TextBlock" x:Key="label" >
        <Setter Property="Margin" Value="2" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#c0c0c0" />
    </Style>

    <Style TargetType="TextBlock" x:Key="header">
        <Setter Property="Margin" Value="2" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="2" />
        <Setter Property="Background" Value="#c0c0c0" />
    </Style>

    <Style TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="#202020"  />
        <Setter Property="Foreground" Value="White" />
    </Style>


    <Style TargetType="{x:Type Grid}" x:Key="MainBackground">
        <Setter Property="Background" Value="#202020"/>
    </Style>

    <Style TargetType="{x:Type DataGridCell}">
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#681DD6"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>





</ResourceDictionary>